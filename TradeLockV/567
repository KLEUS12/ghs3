langCorner.CornerRadius = UDim.new(0, 10)

local BackButton = Instance.new("TextButton", SettingsFrame)
BackButton.Size = UDim2.new(0, 200, 0, 40)
BackButton.Position = UDim2.new(0.5, -100, 0, 120)
BackButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
BackButton.TextColor3 = Color3.fromRGB(255, 255, 255)
BackButton.Font = Enum.Font.GothamBold
BackButton.TextSize = 18
