backCorner.CornerRadius = UDim.new(0, 10)

local function updateLanguage()
    SettingsTitle.Text = translations[currentLanguage].title
    LanguageButton.Text = translations[currentLanguage].language .. (currentLanguage == "en" and ": EN" or ": RU")
    BackButton.Text = translations[currentLanguage].back
    TradeLag.label.Text = translations[currentLanguage][TradeLag.textKey]
    TradeVacuum.label.Text = translations[currentLanguage][TradeVacuum.textKey]
end

LanguageButton.MouseButton1Click:Connect(function()
    currentLanguage = currentLanguage == "en" and "ru" or "en"
    updateLanguage()
end)

BackButton.MouseButton1Click:Connect(function()
    SettingsFrame.Visible = false
    Frame.Visible = true
end)

SettingsButton.MouseButton1Click:Connect(function()
    Frame.Visible = false
    SettingsFrame.Visible = true
end)

local isPopupActive = false
function showPopupMessage(text)
    if isPopupActive then return end
    isPopupActive = true
    local popup = Instance.new("TextLabel", ScreenGui)
    popup.Size = UDim2.new(0, 420, 0, 60)
    popup.Position = UDim2.new(0.5, -210, 0.05, 0)
    popup.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
    popup.TextColor3 = Color3.fromRGB(255, 100, 100)
    popup.Text = "⚠ " .. text
    popup.Font = Enum.Font.GothamBold
    popup.TextWrapped = true
    popup.TextSize = 16
    popup.BorderSizePixel = 0
    local popCorner = Instance.new("UICorner", popup)
    popCorner.CornerRadius = UDim.new(0, 12)
    popup.TextTransparency = 1
    local fadeIn = TweenService:Create(popup, TweenInfo.new(0.5), {TextTransparency = 0})
    fadeIn:Play()
    fadeIn.Completed:Wait()
    task.delay(3, function()
        local fadeOut = TweenService:Create(popup, TweenInfo.new(0.5), {TextTransparency = 1})
        fadeOut:Play()
        fadeOut.Completed:Wait()
        popup:Destroy()
        isPopupActive = false
    end)
end

updateLanguage()
