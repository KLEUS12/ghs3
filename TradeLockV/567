SettingsFrame.BorderSizePixel = 0
local sCorner = Instance.new("UICorner", SettingsFrame)
sCorner.CornerRadius = UDim.new(0, 12)

local SettingsTitle = Instance.new("TextLabel", SettingsFrame)
SettingsTitle.Size = UDim2.new(1, 0, 0, 40)
SettingsTitle.BackgroundTransparency = 1
SettingsTitle.Font = Enum.Font.GothamBold
SettingsTitle.TextSize = 20
SettingsTitle.TextColor3 = Color3.fromRGB(255, 255, 255)

local LanguageButton = Instance.new("TextButton", SettingsFrame)
LanguageButton.Size = UDim2.new(0, 200, 0, 40)
LanguageButton.Position = UDim2.new(0.5, -100, 0, 60)
LanguageButton.BackgroundColor3 = Color3.fromRGB(100, 0, 200)
LanguageButton.TextColor3 = Color3.fromRGB(255, 255, 255)
LanguageButton.Font = Enum.Font.GothamBold
